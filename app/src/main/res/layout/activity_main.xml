<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onedayone.piyagi.MainActivity"
    android:background="#EFD0B4"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/main_background_piyagi1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/piyagi1"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/piyagi_text1"
        android:background="#EFD0B4"/>

    <ImageView
        android:id="@+id/main_background_piyagi2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/piyagi2"
        android:adjustViewBounds="true"/>

    <FrameLayout
        android:id="@+id/repeat_list1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.kim.myapplication.RepeatListviewActivity">
            <ListView
                android:id="@+id/repeat_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/repeat1"
            android:padding="0dp"
            android:layout_margin="0dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/alyac_list1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="55dp"
        android:layout_below="@id/repeat_list1">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.kim.myapplication.AlyacListviewActivity">
            <ListView
                android:id="@+id/alyac_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/alyac1"
            android:padding="0dp"
            android:layout_margin="0dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hospital_list1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="17dp"
        android:layout_below="@id/alyac_list1">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <ListView
                android:id="@+id/hospital_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/hospital1" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true" >
        <ImageButton
            android:id="@+id/btn_add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/plus1"
            android:background="#EFD0B4"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/main_background_piyagi3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/piyagi3_edited1"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
