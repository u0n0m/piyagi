<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onedayone.piyagi.MainActivity"
    android:background="#F1F1F1"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/main_background_piyagi1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/piyagi1"
        android:adjustViewBounds="true" />
    <ImageView
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/piyagi_text1"
        android:background="#F1F1F1"/>
    <ImageView
        android:id="@+id/main_background_piyagi2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_alignParentRight="true"
        android:src="@drawable/piyagi3"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:id="@+id/main_alyac_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:text="90분 간격"
                android:textColor="#242E2B"
                android:textSize="19dp"/>
            <ImageButton
                android:id="@+id/alyac_imagebutton1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:background="#00000000"
                android:src="@drawable/circle_on"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:text="90분 간격"
                android:textColor="#242E2B"
                android:textSize="19dp"/>
            <ImageButton
                android:id="@+id/alyac_imagebutton2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:background="#00000000"
                android:src="@drawable/circle_on"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:text="90분 간격"
                android:textColor="#242E2B"
                android:textSize="19dp"/>
            <ImageButton
                android:id="@+id/alyac_imagebutton3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:background="#00000000"
                android:src="@drawable/circle_on"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/repeat_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:text="90분 간격"
                android:textColor="#242E2B"
                android:textSize="19dp"/>
            <ImageButton
                android:id="@+id/repeat_imagebutton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:background="#00000000"
                android:src="@drawable/circle_on"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_alyac_list1"
        android:paddingTop="60dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:text="90분 간격"
                android:textColor="#242E2B"
                android:textSize="19dp"/>
            <ImageButton
                android:id="@+id/alyac_imagebutton1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:background="#00000000"
                android:src="@drawable/circle_on"/>
        </RelativeLayout>
    </LinearLayout>






    <ImageView
        android:id="@+id/main_background_piyagi3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/piyagi2"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
