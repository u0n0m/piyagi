<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onedayone.piyagi.MainActivity"
    android:background="#F1F1F1"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/main_background_piyagi1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/piyagi1"
        android:adjustViewBounds="true" />
    <ImageView
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/piyagi_text1"
        android:background="#F1F1F1"/>
    <ImageView
        android:id="@+id/main_background_piyagi2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_alignParentRight="true"
        android:src="@drawable/piyagi3"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:id="@+id/main_alyac_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="오전 08:30"
                android:textColor="#242E2B"
                android:textSize="19dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/alyac_btn1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_btn1"
                android:text="켜짐"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="오후 01:00"
                android:textColor="#242E2B"
                android:textSize="19dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/alyac_btn2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_btn1"
                android:text="켜짐"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="오후 06:30"
                android:textColor="#242E2B"
                android:textSize="19dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/alyac_btn3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_btn1"
                android:text="켜짐"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/alyac_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="오후 11:00"
                android:textColor="#242E2B"
                android:textSize="19dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/alyac_btn4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_btn1"
                android:text="켜짐"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_repeat_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/main_alyac_list1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <TextView
                android:id="@+id/repeat_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:text="오전 10:00부터 \n   4시간 마다"
                android:textColor="#242E2B"
                android:textSize="19dp"
                android:maxLength="55"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/repeat_button1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_btn1"
                android:text="켜짐"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_hospital_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_repeat_list1"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88D4C7">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:padding="10dp">
                <TextView
                    android:id="@+id/hospital_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2017/01/15"
                    android:textColor="#242E2B"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/hospital_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="오전 11:00"
                    android:textColor="#242E2B"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/hospital_textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="사랑병원 재활의학과"
                    android:textColor="#242E2B"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <Button
                android:id="@+id/hospital_button1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_btn1"
                android:text="켜짐"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/main_background_piyagi3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/piyagi2"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
