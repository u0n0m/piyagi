<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EC7C"
    tools:context="com.onedayone.piyagi.RepeatActivity"    >
    <LinearLayout
        android:id="@+id/repeat_top_menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/btn_repeat"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/repeat_sign"
            android:scaleType="fitCenter"
            android:background="#F2EC7C"
/>
        <ImageButton
            android:id="@+id/btn_alyac"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/alyac"
            android:scaleType="fitCenter"
            android:background="#F2EC7C" />
        <ImageButton
            android:id="@+id/btn_hospital"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/hospital"
            android:scaleType="fitCenter"
            android:background="#F2EC7C" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timepicker_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/repeat_top_menu1"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_repeat_hour_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
            <TextView
                android:id="@+id/textview_repeat_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="40sp"
                android:textColor="#2D2B2C"/>
            <ImageButton
                android:id="@+id/btn_repeat_hour_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#2D2B2C"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_repeat_minute_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
            <TextView
                android:id="@+id/textview_repeat_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="50sp"
                android:textColor="#2D2B2C"/>
            <ImageButton
                android:id="@+id/btn_repeat_minute_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/alarm_sound1"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timepicker_repeat"
        android:src="@drawable/repeat_alarm_text1"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/volume1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_sound1"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:text="볼륨"
            android:textColor="#000000"
            android:textSize="23dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/volume1"
            android:layout_gravity="center"
            android:gravity="center"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/speaker1"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shaking1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/volume1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:text="알람과 함께 진동"
            android:textColor="#000000"
            android:textSize="23dp"/>
        <ImageView
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:src="@drawable/repeat_on"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/repeat_realalarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/shaking1"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:text="다시 알람 주기"
            android:textColor="#000000"
            android:textSize="23dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:src="@drawable/five_minutes"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/repeat_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/repeat_realalarm"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:text="복용할 약"
            android:textColor="#000000"
            android:textSize="23dp"/>
        <EditText
            android:id="@+id/repeat_contents_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="77dp"
            android:ems="8"
            android:maxLength="8"
            android:hint="안약 넣기"
            android:inputType="text"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/repeat_bottom_menu1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#0F9B8E"
        android:layout_alignParentBottom="true" >
        <ImageButton
            android:id="@+id/repeat_btn_save"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_save"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0F9B8E"/>
        <ImageButton
            android:id="@+id/repeat_btn_cancel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/repeat_btn_save"
            android:layout_marginLeft="50dp"
            android:src="@drawable/btn_cancel"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0F9B8E"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:src="@drawable/piyagi1"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
</RelativeLayout>

