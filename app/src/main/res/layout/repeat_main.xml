<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EC7C"
    tools:context="com.onedayone.piyagi.RepeatActivity"    >
    <LinearLayout
        android:id="@+id/top_menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/btn_repeat"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/repeat_sign"
            android:scaleType="fitCenter"
            android:background="#F2EC7C"
/>
        <ImageButton
            android:id="@+id/btn_alyac"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/alyac"
            android:scaleType="fitCenter"
            android:background="#F2EC7C"
/>
        <ImageButton
            android:id="@+id/btn_hospital"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/hospital"
            android:scaleType="fitCenter"
            android:background="#F2EC7C" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timepicker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/top_menu1"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_repeat_hour_up"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
            <TextView
                android:id="@+id/textview_repeat_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="50sp"
                android:textColor="#2D2B2C"/>
            <ImageButton
                android:id="@+id/btn_repeat_hour_down"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#2D2B2C"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_repeat_minute_up"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
            <TextView
                android:id="@+id/textview_repeat_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="50sp"
                android:textColor="#2D2B2C"/>
            <ImageButton
                android:id="@+id/btn_repeat_minute_down"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#F2EC7C"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/alarm_sound1"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timepicker1"
        android:src="@drawable/repeat_alarm_text1"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/volume1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_sound1"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:src="@drawable/repeat_alarm_text2"
            android:gravity="center"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/volume1"
            android:layout_gravity="center"
            android:gravity="center"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/speaker1"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/shaking1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/volume1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="21dp"
            android:src="@drawable/repeat_alarm_text3"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:src="@drawable/repeat_on"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="33dp"
                android:layout_height="34dp"
                android:src="@drawable/repeat_off"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/shaking1"
        android:layout_marginTop="7dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:src="@drawable/repeat_alarm_text4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:src="@drawable/five_minutes"
            android:layout_centerVertical="true"
            android:layout_marginLeft="77dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_menu1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:padding="30dp"
        android:background="#0F9B8E"
        android:layout_alignParentBottom="true" >
        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_save"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0F9B8E"/>
        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_save"
            android:layout_marginLeft="50dp"
            android:src="@drawable/btn_cancel"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0F9B8E"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:src="@drawable/piyagi1"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
</RelativeLayout>

