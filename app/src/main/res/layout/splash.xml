<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.onedayone.piyagi.SplashActivity"    >
    <RelativeLayout
        android:id="@+id/splash_top"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/splash_text1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/splash_text1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />
        <ImageView
            android:id="@+id/splash_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/piyagi_text1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/splash_bottom1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="0dp"
        android:background="#0F9B8E"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/splash_piyagi1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/piyagi1"
        android:background="@android:color/transparent" />
    <ImageView
        android:id="@+id/alarm_piyagi2"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/piyagi2" />
    <ImageView
        android:id="@+id/alarm_piyagi3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="115dp"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/piyagi3"
        android:background="@android:color/transparent" />
</RelativeLayout>