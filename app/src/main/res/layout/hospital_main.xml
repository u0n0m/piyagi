<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEDAD9"
    tools:context="com.onedayone.piyagi.HospitalActivity"    >
    <LinearLayout
        android:id="@+id/top_menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/btn_repeat3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/repeat_sign2"
            android:scaleType="fitCenter"
            android:background="#AEDAD9" />
        <ImageButton
            android:id="@+id/btn_alyac3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/alyac"
            android:scaleType="fitCenter"
            android:background="#AEDAD9" />
        <ImageButton
            android:id="@+id/btn_hospital3"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/hospital2"
            android:scaleType="fitCenter"
            android:background="#AEDAD9"
/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/datepicker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/top_menu1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017"
                android:textSize="30sp"
                android:textColor="#2D2B2C"
                android:layout_margin="2dp"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textSize="30sp"
                android:textColor="#2D2B2C"
                android:layout_margin="2dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="30sp"
                android:textColor="#2D2B2C"
                android:layout_margin="2dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/timepicker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/top_menu1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM"
                android:textSize="30sp"
                android:textColor="#2D2B2C"
                android:layout_margin="2dp"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textSize="30sp"
                android:textColor="#2D2B2C"
                android:layout_margin="2dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#2D2B2C"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_up"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="30sp"
                android:textColor="#2D2B2C"
                android:layout_margin="2dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle_down"
                android:scaleType="fitCenter"
                android:background="#AEDAD9"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/alarm_sound1"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timepicker1"
        android:src="@drawable/repeat_alarm_text1"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/volume1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_sound1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:src="@drawable/repeat_alarm_text2"
            android:gravity="center"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/volume1"
            android:layout_gravity="center"
            android:gravity="center"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/speaker1"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/shaking1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/volume1"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="21dp"
            android:src="@drawable/repeat_alarm_text3"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:src="@drawable/repeat_on"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="33dp"
                android:layout_height="34dp"
                android:src="@drawable/repeat_off"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/realarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/shaking1"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:src="@drawable/repeat_alarm_text4"
            android:layout_marginLeft="34dp"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:src="@drawable/five_minutes"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hospital_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/realarm"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:src="@drawable/hospital_name1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:src="@drawable/five_minutes"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_menu1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#0F9B8E"
        android:layout_alignParentBottom="true" >
        <ImageButton
            android:id="@+id/hospital_btn_save"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_save"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0F9B8E"/>
        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hospital_btn_save"
            android:layout_marginLeft="50dp"
            android:src="@drawable/btn_cancel"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0F9B8E"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_margin="8dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:src="@drawable/piyagi3"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
</RelativeLayout>

