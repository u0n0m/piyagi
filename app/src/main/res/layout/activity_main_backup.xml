<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onedayone.piyagi.MainActivity"
    android:background="#EFD0B4"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/main_background_piyagi1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/piyagi1"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/piyagi_text1"
        android:background="#EFD0B4"/>

    <ImageView
        android:id="@+id/main_background_piyagi2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/piyagi2"
        android:adjustViewBounds="true"/>

    <FrameLayout
        android:id="@+id/repeat_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#AA0E9A8D">
                <TextView
                    android:id="@+id/textview9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="22dp"
                    android:text="반복: 2시간"
                    android:textColor="#242E2B"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:background="#000E9A8D"
                    android:adjustViewBounds="true"
                    android:src="@drawable/circle_off"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#AA0E9A8D">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/repeat4hour"
                    android:layout_marginLeft="10dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:background="#000E9A8D"
                    android:src="@drawable/circle_on"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/repeat1"
            android:padding="0dp"
            android:layout_margin="0dp"/>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/alyac_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_below="@id/repeat_list1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/view5"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:background="#AA0E9A8D"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="AM 08:30"
                    android:textColor="#242E2B"
                    android:textSize="20dp"/>
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:scaleType="fitEnd"
                    android:background="#000E9A8D"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/circle_on" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:background="#AA0E9A8D"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/textview7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="AM 08 : 30"
                    android:textColor="#242E2B"
                    android:textSize="20dp"/>
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:scaleType="fitEnd"
                    android:background="#000E9A8D"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/circle_on" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/view8"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:background="#AA0E9A8D"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="AM 08 : 30"
                    android:textColor="#242E2B"
                    android:textSize="20dp"/>
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:scaleType="fitEnd"
                    android:background="#000E9A8D"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/circle_on" />
            </RelativeLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/alyac1"
            android:padding="0dp"
            android:layout_margin="0dp"/>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/hospital_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@id/alyac_list1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
                <View
                    android:id="@+id/view9"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:background="#AA0E9A8D"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/textview10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2017/01/15\nAM 11:30\n차병원재활의학과"
                    android:textColor="#242E2B"
                    android:textSize="20dp"/>
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:scaleType="fitEnd"
                    android:background="#000E9A8D"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/circle_on" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:background="#AA0E9A8D"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2017/01/19\nAM 13:30\n우리들병원 외과"
                    android:textColor="#242E2B"
                    android:textSize="20dp"/>
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:scaleType="fitEnd"
                    android:background="#000E9A8D"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/circle_on" />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/hospital1" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true" >
        <ImageButton
            android:id="@+id/btn_add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/plus1"
            android:background="#EFD0B4"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/main_background_piyagi3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/piyagi3_edited1"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
