<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onedayone.piyagi.MainActivity"
    android:background="#F1F1F1"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/main_background_piyagi1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/piyagi1"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/piyagi_text1"
        android:background="#F1F1F1"/>

    <ImageView
        android:id="@+id/main_background_piyagi2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_background_piyagi1"
        android:layout_alignParentRight="true"
        android:src="@drawable/piyagi3"
        android:adjustViewBounds="true"/>

    <FrameLayout
        android:id="@+id/repeat_list1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#AA0E9A8D">
            <TextView
                android:id="@+id/repeat_textview1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_margin="40dp"
                android:text="90분 간격"
                android:textColor="#242E2B"
                android:textSize="19dp"/>

            <ImageButton
                android:id="@+id/repeat_imagebutton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:background="#000E9A8D"
                android:src="@drawable/circle_on"/>
        </LinearLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/repeat1"
            android:padding="0dp"
            android:layout_margin="0dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/alyac_list1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="45dp"
        android:layout_below="@id/repeat_list1">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.kim.myapplication.AlyacListviewActivity">
            <ListView
                android:id="@+id/alyac_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/alyac1"
            android:padding="0dp"
            android:layout_margin="0dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hospital_list1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/alyac_list1">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.kim.myapplication.HospitalListviewActivity">
            <ListView
                android:id="@+id/hospital_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/hospital1" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true" >
        <ImageButton
            android:id="@+id/btn_add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/plus1"
            android:background="#EFD0B4"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/main_background_piyagi3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/piyagi2"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
